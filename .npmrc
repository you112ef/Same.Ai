# NPM Configuration for AI Coding Assistant

# Package registry
registry=https://registry.npmjs.org/

# Save exact version
save-exact=true

# Package lock
package-lock=true

# Audit
audit=true
fund=false

# Scripts
ignore-scripts=false

# Security
ignore-engines=false

# Cache
cache=~/.npm
prefer-offline=true

# Logs
loglevel=warn
progress=false

# Git
git-checks=true

# Workspaces
workspaces-update=false

# Package manager
engine-strict=true